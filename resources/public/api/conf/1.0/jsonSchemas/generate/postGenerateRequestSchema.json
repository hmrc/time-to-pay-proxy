{
  "title": "A JSON Schema for TTP API.",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "customerReference": {
      "type": "string",
      "minLength": 1,
      "maxLength": 15,
      "description": "Unique Customer reference"
    },
    "channelIdentifier": {
      "type": "string",
      "enum": [
        "advisor",
        "selfService"
      ],
      "description": "Attribute to identify where the request is coming"
    },
    "plan": {
      "type": "object",
      "properties": {
        "quoteType": {
          "type": "string",
          "enum": [
            "duration",
            "instalmentAmount"
          ],
          "description": "this will determine what IFS is required to calculate either duration or instalment amount"
        },
        "quoteDate": {
          "type": "string",
          "format": "date",
          "description": "Quote date"
        },
        "instalmentStartDate": {
          "type": "string",
          "format": "date",
          "description": "Instalment start date"
        },
        "instalmentAmount": {
          "type": "number",
          "description": "Instalment amount"
        },
        "frequency": {
          "type": "string",
          "enum": [
            "single",
            "weekly",
            "2Weekly",
            "4Weekly",
            "monthly",
            "quarterly",
            "6Monthly",
            "annually"
          ],
          "description": "payment frequency"
        },
        "duration": {
          "type": "integer",
          "description": "Duration for the payment frequency"
        },
        "initialPaymentAmount": {
          "type": "integer",
          "description": "Initial payment amount"
        },
        "initialPaymentDate": {
          "type": "string",
          "format": "date",
          "description": "Initial payment date"
        },
        "paymentPlanType": {
          "type": "string",
          "enum": [
            "timeToPay",
            "instalmentOrder",
            "childBenefits",
            "fieldCollections",
            "LFC"
          ],
          "description": "Payment plan type"
        }
      },
      "additionalProperties": false,
      "required": [
        "quoteType",
        "quoteDate",
        "instalmentStartDate",
        "frequency",
        "paymentPlanType"
      ]
    },
    "customerPostCodes": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "addressPostcode": {
            "type": "string",
            "description": "Customer postcode this will be a list of postcodes"
          },
          "postcodeDate": {
            "type": "string",
            "format": "date",
            "description": "Date the customer used this postcode from"
          }
        },
        "additionalProperties": false,
        "required": [
          "addressPostcode",
          "postcodeDate"
        ]
      }
    },
    "debtItemCharges": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "debtItemChargeId": {
            "type": "string",
            "minLength": 1,
            "maxLength": 16,
            "description": "An ID which uniquely identifies a particular duty"
          },
          "mainTrans": {
            "type": "string",
            "minLength": 4,
            "maxLength": 8,
            "description": "Unique MTrans Debt Type ID e.g.1525 also known as M Trans"
          },
          "subTrans": {
            "type": "string",
            "minLength": 4,
            "maxLength": 8,
            "description": "Duty Type description for the UI"
          },
          "originalDebtAmount": {
            "type": "integer",
            "description": "Original debt amount"
          },
          "interestStartDate": {
            "type": "string",
            "format": "date",
            "description": "The interest start date"
          },
          "paymentHistory": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "paymentDate": {
                  "type": "string",
                  "format": "date",
                  "description": "Payment date"
                },
                "paymentAmount": {
                  "type": "integer",
                  "description": "Payment amount"
                }
              },
              "additionalProperties": false,
              "required": [
                "paymentDate",
                "paymentAmount"
              ]
            }
          }
        },
        "additionalProperties": false,
        "required": [
          "debtItemChargeId",
          "mainTrans",
          "subTrans",
          "originalDebtAmount"
        ]
      }
    }
  },
  "additionalProperties": false,
  "required": [
    "customerReference",
    "channelIdentifier",
    "plan",
    "debtItemCharges"
  ]
}