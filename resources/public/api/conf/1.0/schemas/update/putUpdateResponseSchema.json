{
  "title": "A JSON Schema for TTP API.",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "customerReference": {
      "type": "string",
      "minLength": 1,
      "maxLength": 15,
      "description": "Customer reference"
    },
    "planId": {
      "type": "string",
      "minLength": 1,
      "maxLength": 15,
      "description": "Unique planId"
    },
    "planStatus": {
      "type": "string",
      "enum": [
        "success",
        "failure"
      ],

      "description": "This could be cancelled and complete"
    },
    "planUpdatedDate": {
      "type": "string",
      "format": "date",
      "description": "This is the date for either the status change or the update"
    }
  }
}