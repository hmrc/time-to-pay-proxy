{
  "title": "A JSON Schema for TTP API.",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "customerReference": {
      "type": "string",
      "minLength": 1,
      "maxLength": 15,
      "description": "This is the customer reference"
    },
    "channelIdentifier": {
      "type": "string",
      "enum": [
        "advisor",
        "selfService"
      ],
      "description": "Attribute to identify where the request is coming"
    },
    "caseId": {
      "type": "string",
      "description": "This is the unique case id"
    },
    "plan": {
      "type": "object",
      "properties": {
        "planId": {
          "type": "string",
          "minLength": 1,
          "maxLength": 15,
          "description": "This is the unique plan id"
        },
        "quoteId": {
          "type": "string",
          "description": "This is the ID for the quote associated with the plan)"
        },
        "quoteDate": {
          "type": "string",
          "format": "date",
          "description": "Quote date"
        },
        "quoteType": {
          "type": "string",
          "enum": [
            "duration",
            "instalmentAmount"
          ],
          "description": "this will determine what IFS is required to calculate either duration or instalment amount"
        },
        "paymentPlanType": {
          "type": "string",
          "enum": [
            "timeToPay",
            "instalmentOrder",
            "childBenefits",
            "fieldCollections",
            "LFC"
          ],
          "description": "Payment Plan Type"
        },
        "thirdPartyBank": {
          "type": "boolean",
          "description": "Third party bank"
        },
        "numberOfInstalments": {
          "type": "integer",
          "description": "Number of instalments"
        },
        "frequency": {
          "type": "string",
          "enum": [
            "single",
            "weekly",
            "2Weekly",
            "4Weekly",
            "monthly",
            "quarterly",
            "6Monthly",
            "annually"
          ],
          "description": "payment frequency"
        },
        "totalDebtIncInt": {
          "type": "integer",
          "description": "This is the total debt plus interest for the plan"
        },
        "totalInterest": {
          "type": "number",
          "description": "This is the total interest accrued for the duration of the plan"
        },
        "interestAccrued": {
          "type": "integer",
          "description": "This is the total interest accrued prior to plan start"
        },
        "planInterest": {
          "type": "number",
          "description": "Interest accrued to the life of the plan"
        }
      }
    },
    "debtItemCharges": {
      "type": "array",
      "items": [
        {
          "type": "object",
          "properties": {
            "debtItemChargeId": {
              "type": "string",
              "minLength": 1,
              "maxLength": 16,
              "description": "An ID which uniquely identifies a particular duty"
            },
            "mainTrans": {
              "type": "string",
              "minLength": 4,
              "maxLength": 8,
              "description": "Unique MTrans Debt Type ID e.g.1525 also known as M Trans"
            },
            "subTrans": {
              "type": "string",
              "minLength": 4,
              "maxLength": 8,
              "description": "Duty Type description for the UI"
            },
            "originalDebtAmount": {
              "type": "integer",
              "description": "Original debt amount"
            },
            "interestStartDate": {
              "type": "string",
              "format": "date",
              "description": "The interest start date"
            },
            "paymentHistory": {
              "type": "array",
              "items": [
                {
                  "type": "object",
                  "properties": {
                    "paymentDate": {
                      "type": "string",
                      "format": "date",
                      "description": "Payment date"
                    },
                    "paymentAmount": {
                      "type": "integer",
                      "description": "Payment amount"
                    }
                  }
                }
              ]
            }
          }
        }
      ]
    },
    "payments": {
      "type": "array",
      "items": [
        {
          "type": "object",
          "properties": {
            "paymentMethod": {
              "type": "string",
              "enum": [
                "directDebit",
                "BACS",
                "cheque",
                "cardPayment",
                "On going award"
              ],
              "description": "Payment method (Direct debit, BACS, Cheque, Card)"
            },
            "paymentReference": {
              "type": "string",
              "minLength": 1,
              "maxLength": 15,
              "description": "Payment Method reference"
            }
          }
        }
      ]
    },
    "customerPostCodes": {
      "type": "array",
      "items": [
        {
          "type": "object",
          "properties": {
            "addressPostcode": {
              "type": "string",
              "description": "Customer postcode this will be a list of postcodes"
            },
            "postcodeDate": {
              "type": "string",
              "format": "date",
              "description": "Date the customer used this postcode from"
            }
          }
        }
      ]
    },
    "instalments": {
      "type": "array",
      "items": [
        {
          "type": "object",
          "properties": {
            "debtItemChargeId": {
              "type": "string",
              "minLength": 1,
              "maxLength": 16,
              "description": "An ID which uniquely identifies a particular duty"
            },
            "dueDate": {
              "type": "string",
              "format": "date",
              "description": "Due date"
            },
            "amountDue": {
              "type": "integer",
              "description": "Amount due"
            },
            "expectedPayment": {
              "type": "integer",
              "description": "Expected payment"
            },
            "interestRate": {
              "type": "number",
              "description": "Interest rate"
            },
            "instalmentNumber": {
              "type": "integer",
              "description": "Instalment number"
            },
            "instalmentInterestAccrued": {
              "type": "integer",
              "description": "Instalment interest"
            },
            "instalmentBalance": {
              "type": "integer",
              "description": "Instalment balance"
            }
          }
        }
      ]
    }
  }
}
